
@model List<DataModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
@Html.ActionLink("Enviar dados", "formulario", "data")

<div>
    <table>
        <thead>
            <tr>
                <th>Temperatura</th>
                <th>Muita chuva?</th>
                <th>Muita umidade?</th>
                <th>Ação</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Count > 0)
            {
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Temperature</td>
                        <td>@item.Rain</td>
                        <td>@item.Humidity</td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>